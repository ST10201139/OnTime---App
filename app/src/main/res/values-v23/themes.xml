<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OPSCOnTime" parent="Base.Theme.OPSCOnTime">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Set the status bar color to the defined dark purple color -->
        <item name="android:statusBarColor">@color/purple_dark</item>
        <!-- Determine whether the status bar icons and text should be light or dark -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>