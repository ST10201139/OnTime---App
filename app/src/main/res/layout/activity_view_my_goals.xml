<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/theme_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="83dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />
    <!-- Minimum Daily Goal -->
    <TextView
        android:id="@+id/textViewMinGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum Daily Goal: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- EditText to enter Minimum Goal -->
    <EditText
        android:id="@+id/editTextMinGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter minimum goal"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textSize="16sp" />

    <!-- Maximum Daily Goal -->
    <TextView
        android:id="@+id/textViewMaxGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximum Daily Goal: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- EditText to enter Maximum Goal -->
    <EditText
        android:id="@+id/editTextMaxGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter maximum goal"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textSize="16sp" />

    <!-- Button to save goals -->
    <Button
        android:id="@+id/buttonSaveGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Goals"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Goal Progress"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"/>

    <!-- Maximum Hours Label -->
    <TextView
        android:id="@+id/textViewMaxHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Hours:"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- Progress Bar for Maximum Hours -->
    <ProgressBar
        android:id="@+id/progressBarMax"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:max="24"
        android:progress="0"
        android:progressDrawable="@android:drawable/progress_horizontal"/>

    <!-- Progress Bar for Minimum Hours -->
    <ProgressBar
        android:id="@+id/progressBarMin"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:max="24"
        android:progress="0"
        android:progressDrawable="@android:drawable/progress_horizontal"/>

    <!-- Minimum Hours Label -->
    <TextView
        android:id="@+id/textViewMinHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Hours: "
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
